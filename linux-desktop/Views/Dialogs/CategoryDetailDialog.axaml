<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TwoFactorAuth.Views.Dialogs.CategoryDetailDialog"
        Width="450" SizeToContent="Height"
        Title="{DynamicResource Lang.Category.DetailTitle}"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
    <StackPanel Margin="24" Spacing="20">
        <TextBlock Text="{DynamicResource Lang.Category.DetailPrompt}" FontSize="14" />
        
        <StackPanel Spacing="8">
            <TextBlock Text="{DynamicResource Lang.Category.NameLabel}" 
                       FontWeight="SemiBold" 
                       FontSize="12"
                       Opacity="0.7"/>
            <TextBlock x:Name="CategoryNameText" 
                       FontSize="16" 
                       FontWeight="SemiBold"/>
        </StackPanel>
        
        <StackPanel Spacing="8">
            <TextBlock Text="{DynamicResource Lang.Category.DescriptionLabel}" 
                       FontWeight="SemiBold" 
                       FontSize="12"
                       Opacity="0.7"/>
            <Border BorderBrush="{DynamicResource SemiColorBorder}" 
                    BorderThickness="1" 
                    CornerRadius="4" 
                    Padding="12"
                    Background="{DynamicResource SemiColorBackground1}">
                <TextBlock x:Name="DescriptionText" 
                           TextWrapping="Wrap"
                           FontSize="14"/>
            </Border>
        </StackPanel>
        
        <StackPanel Spacing="8">
            <TextBlock Text="{DynamicResource Lang.Category.AccountCountLabel}" 
                       FontWeight="SemiBold" 
                       FontSize="12"
                       Opacity="0.7"/>
            <TextBlock x:Name="AccountCountText" 
                       FontSize="16" 
                       FontWeight="SemiBold"/>
        </StackPanel>
        
        <StackPanel Spacing="8">
            <TextBlock Text="{DynamicResource Lang.Category.SortOrderLabel}" 
                       FontWeight="SemiBold" 
                       FontSize="12"
                       Opacity="0.7"/>
            <TextBlock x:Name="SortOrderText" 
                       FontSize="14"/>
        </StackPanel>
        
        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="{DynamicResource Lang.Close}" 
                    Click="OnCloseClick" 
                    Theme="{DynamicResource PrimaryButton}" />
        </WrapPanel>
    </StackPanel>
</Window>
