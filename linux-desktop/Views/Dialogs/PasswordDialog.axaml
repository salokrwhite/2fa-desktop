<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodels="clr-namespace:TwoFactorAuth.ViewModels"
        x:Class="TwoFactorAuth.Views.Dialogs.PasswordDialog"
        x:DataType="viewmodels:PasswordDialogViewModel"
        Width="380"
        Height="220"
        Title="{Binding Title}"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20" Spacing="12">
        <TextBlock Text="{Binding Prompt}" />
        <TextBox Name="PasswordBox" PasswordChar="â€¢" />
        <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" />
        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="{Binding CancelText}" Click="OnCancelClick" IsVisible="{Binding AllowCancel}" Margin="0,0,10,10" />
            <Button Content="{Binding ConfirmText}" Click="OnUnlockClick" Margin="0,0,10,10" />
        </WrapPanel>
    </StackPanel>
</Window>
