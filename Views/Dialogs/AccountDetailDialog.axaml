<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:TwoFactorAuth.Models"
        x:Class="TwoFactorAuth.Views.Dialogs.AccountDetailDialog"
        x:DataType="models:Account"
        Width="400" SizeToContent="Height"
        Title="{DynamicResource Lang.Dialog.AccountDetails}"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
    <StackPanel Margin="24" Spacing="16">
        <TextBlock Text="{DynamicResource Lang.Dialog.AccountDetails}" Classes="H3" Margin="0,0,0,8"/>

        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,*">
            <TextBlock Grid.Row="0" Grid.Column="0" Text="{DynamicResource Lang.AccountName}" Opacity="0.7" Margin="0,0,16,8"/>
            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Name}" FontWeight="Medium" Margin="0,0,0,8"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="{DynamicResource Lang.Issuer}" Opacity="0.7" Margin="0,0,16,8"/>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Issuer}" Margin="0,0,0,8"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="{DynamicResource Lang.Secret}" Opacity="0.7" Margin="0,0,16,8"/>
            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Secret}" TextWrapping="Wrap" Margin="0,0,0,8"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="{DynamicResource Lang.Type}" Opacity="0.7" Margin="0,0,16,8"/>
            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Type}" Margin="0,0,0,8"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="{DynamicResource Lang.Digits}" Opacity="0.7" Margin="0,0,16,8"/>
            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Digits}" Margin="0,0,0,8"/>

            <TextBlock Grid.Row="5" Grid.Column="0" Text="{DynamicResource Lang.Period}" Opacity="0.7" Margin="0,0,16,8"/>
            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding Period}" Margin="0,0,0,8"/>
        </Grid>

        <Button Content="{DynamicResource Lang.Close}" Click="OnCloseClick" HorizontalAlignment="Right" Classes="Primary"/>
    </StackPanel>
</Window>