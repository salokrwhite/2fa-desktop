<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodels="clr-namespace:TwoFactorAuth.ViewModels"
        x:Class="TwoFactorAuth.Views.Dialogs.SetPasswordDialog"
        x:DataType="viewmodels:SetPasswordDialogViewModel"
        Width="420"
        Height="280"
        Title="{Binding Title}"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20" Spacing="12">
        <TextBlock Text="{Binding NewPasswordPrompt}" />
        <TextBox Name="NewPasswordBox" PasswordChar="•" />
        <TextBlock Text="{Binding ConfirmPasswordPrompt}" />
        <TextBox Name="ConfirmPasswordBox" PasswordChar="•" />
        <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap" />
        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="{Binding CancelText}" Click="OnCancelClick" Margin="0,0,10,10" />
            <Button Content="{Binding ConfirmText}" Click="OnConfirmClick" Margin="0,0,10,10" />
        </WrapPanel>
    </StackPanel>
</Window>

